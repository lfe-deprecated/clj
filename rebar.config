{erl_opts, [debug_info]}.
{lfe_first_files, ["src/clj-p.lfe"]}.
{eunit_compile_opts, [
    {src_dirs, ["test", "src"]}
  ]}.
{deps, [
    {lfe, ".*", {git, "git://github.com/rvirding/lfe.git", {tag, "v0.10.0"}}},
    {kla, ".*", {git, "git://github.com/lfex/kla.git", {tag, "0.5.0"}}}
  ]}.
{plugins, [
   {'lfe-compile', ".*", {git, "https://github.com/lfe-rebar3/compile.git", {tag, "0.2.0"}}},
  ]}.
{provider_hooks, [
   {pre, [{compile, {lfe, compile}}]}
  ]}.
